{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "overrides": [
		{
			"files": ["*.ts", "*.tsx"],
            "parser": "typescript-eslint-parser",
            "parserOptions": {
				"ecmaFeatures": {
					"jsx": true
				}
			}
		}
	],
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "settings": {
        "react": {
          "pragma": "React",
          "version": "detect"
        }
      },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native",
        "typescript",
        "react-hooks"
    ],
    "rules": {
        "no-tabs": 2,
        "no-console": "off",
        "react/display-name": "off",
        "react/prop-types": "off",
        "quotes": [2, "single", { "allowTemplateLiterals": true }],
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
    }
}
